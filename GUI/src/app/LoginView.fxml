<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
      fx:controller="app.LoginController"
      spacing="20" alignment="CENTER"
      prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f8f0d7ff;">

    <Label text="Boba POS" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
    <Label text="Login Portal" style="-fx-font-size: 18px;" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Manager Password:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <PasswordField fx:id="managerPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Cashier Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="cashierPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Login as Manager" onAction="#handleManagerLogin" prefWidth="160"/>
        <Button text="Login as Cashier" onAction="#handleCashierLogin" prefWidth="160"/>
    </HBox>

    <Label fx:id="statusLabel" textFill="red" style="-fx-font-size: 14px;"/>
</VBox>
