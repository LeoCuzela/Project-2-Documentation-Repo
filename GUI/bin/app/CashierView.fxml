<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>


<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.CashierController">

  <children>
    <SplitPane dividerPositions="0.1, 1.6" VBox.vgrow="ALWAYS">
      <items>

        <!-- Left Pane: Categories -->
        <AnchorPane prefWidth="170.0" minWidth="140" style="-fx-background-color: #a6b1b7;">
          <children>
            <VBox layoutX="20.0" layoutY="20.0" spacing="35" alignment="CENTER">
              <Label alignment="CENTER" layoutX="28.0" layoutY="14.0" text="Categories" textAlignment="CENTER">
                <font>
                  <Font name="Charter Bold" size="25.0" />
                </font>
                <textFill>
                  <Color red="0.0" green="0.0" blue="0.0" />
                </textFill>
              </Label>

              <Button fx:id="btnIceBlended" prefWidth="180" prefHeight="40" mnemonicParsing="false" onAction="#handleIceBlendedClick" text="Ice-Blended" />

              <Button fx:id="btnFruity" prefWidth="180" prefHeight="40" mnemonicParsing="false" onAction="#handleFruityClick" text="Fruity Beverage" />

              <Button fx:id="btnFreshBrew" prefWidth="180" prefHeight="40" mnemonicParsing="false" onAction="#handleFreshBrewClick" text="Fresh Brew" />

              <Button fx:id="btnMilky" prefWidth="180" prefHeight="40" mnemonicParsing="false" onAction="#handleMilkyClick" text="Milky Series" />

              <Button fx:id="btnMatcha" prefWidth="180" prefHeight="40" mnemonicParsing="false" onAction="#handleMatchaClick" text="New Matcha Series" />

              <Button fx:id="btnNonCaffeinated" prefWidth="180" prefHeight="40" mnemonicParsing="false" onAction="#handleNonCaffeinatedClick" text="Non-Caffeinated" />

              <Button fx:id="btnBack" layoutX="28.0" layoutY="620.0" prefWidth="132.0" mnemonicParsing="false" text="Back" onAction="#handleBackToLogin" />
            </VBox>
          </children>
        </AnchorPane>

        <!-- Middle Pane: Drink Flow -->
        <AnchorPane prefWidth="502.0" style="-fx-background-color: #f8f0d7ff;">
          <children>
            <ScrollPane layoutX="15.0" layoutY="67.0"
                        AnchorPane.topAnchor="67.0"
                        AnchorPane.bottomAnchor="62.0"
                        AnchorPane.leftAnchor="15.0"
                        AnchorPane.rightAnchor="15.0"
                        fitToWidth="true"
                        fitToHeight="false"
                        style="-fx-background: #f8f0d7; -fx-background-color: #f8f0d7;">
              <content>
                <FlowPane fx:id="drinkPane"
                          prefWidth="466.0"
                          hgap="20"
                          vgap="20"
                          alignment="CENTER"
                          style="-fx-padding: 20;" />
              </content>
            </ScrollPane>
          </children>
        </AnchorPane>


        <!-- Right Pane: Order Details -->
        <AnchorPane prefWidth="200.0" SplitPane.resizableWithParent="false" style="-fx-background-color: #a6b1b7;">
          <children>
            <Label alignment="CENTER" layoutX="71.0" layoutY="14.0" text="Details" textAlignment="CENTER">
              <font>
                <Font name="Charter Bold" size="18.0" />
              </font>
              <textFill>
                <Color red="0.0" green="0.0" blue="0.0" />
              </textFill>
            </Label>

            <ListView fx:id="orderListView" layoutY="59.0" prefHeight="390.0" prefWidth="200.0" />

            <Label fx:id="totalLabel" layoutX="10.0" layoutY="461.0" text="Total:">
              <font>
                <Font name="Al Tarikh Regular" size="13.0" />
              </font>
            </Label>

            <Button fx:id="btnRemoveItem" layoutX="10.0" layoutY="490.0" mnemonicParsing="false" onAction="#handleRemoveItemClick" text="Remove Item" />

            <Button fx:id="btnSubmitOrder" layoutX="10.0" layoutY="530.0" mnemonicParsing="false" onAction="#handleSubmitOrderClick" text="Submit Order" />
          </children>
        </AnchorPane>

      </items>
    </SplitPane>
  </children>
</VBox>
